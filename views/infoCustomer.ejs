<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bike Storage</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <div class="container my-3">
        <div class="row">
            <nav class="navbar navbar-light" style="background-color: #f5f9fc;">
                <div class="container-fluid">
                  <a class="navbar-brand">Bike Storage</a>

                  <ul class="nav nav-tabs">
                    <li class="nav-item">
                      <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/customers">Customer</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/bikes">Motorcycle</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link active" href="/custbikes">Data pelanggan</a>
                    </li>
                  </ul>
                </div>
              </nav>
        </div>

        <div class="row py-4">
            <div class="col-12 text-center">
                <h3 class="pacifico">Data Penitipan</h3>
        </div>

        <div class="container mt-5">
            <a class="btn btn-primary" href="custbikes/add" role="button">+Add Data</a>
        </div>

        <div class="col-12 my-2 text-center">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nomor</th>
                        <th>Nama</th>
                        <th>Motor</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    <% custbikes.forEach(custbike => { %>
                        <tr>
                            <td><%= custbike.id %></td>

                            <td>
                              <div class="row">
                                <div class="col-12">
                                  <h5>
                                    <%= custbike.customer.name %>
                                  </h5>
                                  <small class="badge bg-info"><%= custbike.customer.nopol %></small>
                                </div>
                              </div>
                            </td>

                            <td>
                              <div class="row">
                                <div class="col-12">
                                  <h5>
                                    <%= custbike.bike.name %>
                                  </h5>
                                  <small class="badge bg-secondary"><%= custbike.bike.merk %></small>
                                  <small class="badge bg-secondary"><%= custbike.bike.type %></small>
                                </div>
                              </div>
                            </td>
                        </tr>
                    <%}) %> 
                </tbody>
            </table>
        </div>
    </div>



    <!-- JavaScript Bundle with Popper -->
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">
    </script>
</body>
</html>